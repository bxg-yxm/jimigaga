/**index.wxss**/
@import '../template/template.wxss';
.container {
  background: #f2f2f2;
  padding-top: 88rpx;
}
.indexSwiperImg,
.indexSwiper {
  width: 100%;
  height: 390rpx;
}
.indexSwiperImg {
  height: auto;
}
.searchWrap {
  position: fixed;
  z-index: 9;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding: 12rpx 0 17rpx 20rpx;
  background: rgba(255,255,255,1);
  border-bottom: 1px solid #eee;
}
.gagalogo {
  height: 59rpx;
  width: 120rpx;
}
.search {
  width: 508rpx;
  height: 54rpx;
  border-radius: 27rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  line-height: 4.17;
  padding-left: 24rpx;
  color:#000;
  display: inline-block;
  margin-left: 20rpx;
  border: 1px solid #eee
}
.search-placeholder {
  color:#999;
}
.icon-search {
  transform: translateY(-16rpx);
  margin-left: 20rpx;
}

/* 产品分类 */
.productClassWrap {
  height: 80rpx;
  background: #fff;
  margin-bottom: 15rpx;
}
.productClass{
  float: left;
  width:120rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color:#333;
  text-align: center;
}
.productClass.active {
  color:#ec6313;
  border-bottom: 4rpx solid #ff5558;
}

/* 产品列表 */
.productLists {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 15rpx;
  width: 100%;
}
.productListImg {
  position: relative;
}
.productListActivity {
  position: absolute;
  right:0;
  bottom: 10rpx;
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  color:#fff;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #ff5557;
}
.productDescription {
  font-size: 30rpx;
  color:#333;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  line-height: 1.2;
}
.productMoney {
  height: 60rpx;
  line-height: 60rpx;
}
.productTotal {
  font-size: 32rpx;
  color:#ec6313;
  line-height: 1.13;
}
.productOldTotal {
  color:#999;
  font-size: 24rpx;
  position: relative;
  margin-left: 20rpx;
}
.productOldTotal::after{
  position: absolute;
  content: '';
  width: 100%;
  height: 2rpx;
  background: #999;
  left: 0;
  top:50%;
}
.productBuy {
  width: 160rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #ec6313;
  color:#fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
